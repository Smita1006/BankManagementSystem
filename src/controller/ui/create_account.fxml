<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CreateAccountController" prefWidth="400" prefHeight="300">

    <Label layoutX="140" layoutY="30" text="Create New Account" />

    <Label layoutX="80" layoutY="80" text="Name:" />
    <TextField fx:id="nameField" layoutX="150" layoutY="75" prefWidth="150" />

    <Label layoutX="80" layoutY="120" text="Password:" />
    <PasswordField fx:id="passwordField" layoutX="150" layoutY="115" prefWidth="150" />

    <Button layoutX="150" layoutY="170" text="Create Account" onAction="#handleCreateAccount"/>
    
    <Label fx:id="messageLabel" layoutX="100" layoutY="220" textFill="green"/>

</AnchorPane>
